@startuml ERD_Monitoring_Suhu

' Menggunakan skinparam untuk tampilan yang lebih modern
skinparam linetype ortho
skinparam shadowing false
skinparam class {
    BackgroundColor White
    ArrowColor Black
    BorderColor Black
}

' --- Definisi Entitas ---

entity "Admin" as admin {
    * id_admin : int <<PK>>
    --
    * username : string
    * password : string
}

entity "Ruangan" as ruangan {
    * id_ruangan : int <<PK>>
    --
    * nama_ruangan : string
    * lokasi : string
    * suhu_min : float
    * suhu_max : float
    * kelembapan_min : float
    * kelembapan_max : float
}

entity "Device" as device {
    * id_device : int <<PK>>
    --
    * kode_device : string
    * status : string
    * id_ruangan : int <<FK>>
}

entity "Monitoring" as monitoring {
    * id_monitoring : int <<PK>>
    --
    * suhu : float
    * kelembapan : float
    * waktu : datetime
    * id_device : int <<FK>>
}

' --- Relasi Antar Entitas ---

' Satu Admin mengelola banyak Ruangan
admin ||--o{ ruangan : "mengelola"

' Satu Ruangan memiliki satu Device (1-to-1 sesuai gambar)
ruangan ||--|| device : "memiliki"

' Satu Device menghasilkan banyak data Monitoring
device ||--o{ monitoring : "menghasilkan"

@enduml